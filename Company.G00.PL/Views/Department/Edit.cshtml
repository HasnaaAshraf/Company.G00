@model Department ;

@{
    ViewData["Title"] = "Edit";
}

<br/>
<h1>Update Page</h1>

<br/>

<form asp-action="Edit">

    <div class="mt-4">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control"  />
    </div>
    <div class="mt-4">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control"  />
    </div>
    <div class="mt-4">
        <label asp-for="CreateAt" class="col-form-label">Date Of Creation </label>
        <input asp-for="CreateAt" class="form-control"  />
    </div>

    <div>
        <input type="submit" value="Save" class="btn btn-warning mt-3" />
        <a asp-action="Index" asp-controller="Department" class="mt-3 ms-2 btn btn-light">Back To List</a>
    </div>

</form>