@model UpdateDepartmentDto;

@{
    ViewData["Title"] = "Edit";
}

<br/>
<h1>Update Page</h1>

<br/>

<form asp-action="Edit">
    <div class="mt-4">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" value="@Model.Code" class="form-control"  />
    </div>
    <div class="mt-4">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" value="@Model.Name" class="form-control"  />
    </div>
    <div class="mt-4">
        <label asp-for="CreateAt" class="col-form-label">Date Of Creation </label>
        <input asp-for="CreateAt" class="form-control"  />
    </div>

    <div>
        <a asp-action="" asp-controller="Department" class="btn btn-primary mt-3" />Update</a>
        <a asp-action="Index" asp-controller="Department" class="mt-3 ms-2 btn btn-light">Back To List</a>
    </div>

</form>