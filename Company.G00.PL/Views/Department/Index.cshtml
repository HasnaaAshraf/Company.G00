@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<br/>


<div class="container">
    <div>

        <h1>All Department</h1>

        <br />
        <br />

        <a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>

        <br />
        <br />

        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Copy</th>
                        <th>Name</th>
                        <th>Date Of Birth </th>
                        <th>Details </th>
                        <th>Update </th>
                        <th>Delete </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.Name</td>
                            <td>@item.CreateAt</td>
                            <td><a aps-controller="Department" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a></td>
                            <td><a aps-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a></td>
                            <td><a aps-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <div class="mt-4 alert alert-info ">
                <h4>There Are No Department</h4>
            </div>
        }
    </div>
</div>