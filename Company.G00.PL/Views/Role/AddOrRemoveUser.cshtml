@model List<UsersInRoleViewModel>


@{
    // ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";

    var RoleId = ViewData["RoleId"] as string;
}

<h1>Add Or Remove User</h1>


<form asp-action="AddOrRemoveUser" asp-route-roleId="@RoleId" class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow p-4">
               
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-group form-check">
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">
                            @Model[i].UserName
                        </label>
                    </div>

                     <input type="hidden" asp-for="@Model[i].UserId"  />
                     <input type="hidden" asp-for="@Model[i].UserName" />

                }

                <div class="d-flex justify-content-center mt-3">
                    <input type="submit" value="Update" class="btn btn-success me-2" />
                    <a asp-action="Edit" asp-route-id="@RoleId" class="btn btn-light">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
