@model SignInDto

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="m-3 alert alert-danger"></div>
		<form asp-action="SignIn">
			<input class="text email" asp-for="Email" name="email" placeholder="Email" required="">
			<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIn">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Create New Account ?</a></p>
	</div>
</div>

