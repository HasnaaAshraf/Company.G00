@model CreateEmployeeDto;

@{
    ViewData["Title"] = "Create";
}

<br/>

<h1>Create Employee</h1>

<br/>

<form asp-action="Create" >
    
    <div class="mt-4">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mt-4">
		<input asp-for="IsActive" class="form-check" />
        <label asp-for="IsActive" class="col-form-label"></label>
		<span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="mt-4">
		<input asp-for="IsDeleted" class="form-check" />
        <label asp-for="IsDeleted" class="col-form-label"></label>
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <label asp-for="HiringDate" class="col-form-label">Hiring Date </label>
        <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <label asp-for="CreateAt" class="col-form-label">Date Of Creation </label>
        <input asp-for="CreateAt" class="form-control" />
        <span asp-validation-for="CreateAt" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Create" class="btn btn-primary mt-3" />
        <a asp-action="Index" asp-controller="Employee" class="mt-3 ms-2 btn btn-light">Back To List</a>
    </div>

</form>

